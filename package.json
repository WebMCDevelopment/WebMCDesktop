{
  "name": "webmc",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win --linux",
    "mac": "electron-builder --mac"
  },
  "build": {
    "appId": "dev.colbster937.webmcdesktop",
    "productName": "WebMC",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "publish": null,
    "files": [
      "**/*"
    ],
    "mac": {
      "target": "dmg",
      "arch": ["universal"]
    },
    "win": {
      "target": "nsis",
      "arch": ["x64"]
    },
    "linux": {
      "target": "AppImage",
      "arch": ["x64"]
    }
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^36.3.2",
    "electron-builder": "^26.0.12"
  }
}
